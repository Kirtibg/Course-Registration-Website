
doctype html
html
    script(type='text/javascript').
        function myFunction(string) {
        confirm(string);
        }
    head
        meta(charset='utf-8')
        title #{title}
        style.
            .class{
            background: linear-gradient(to bottom right, #0c9c91 0%, #3fe0d3 100%);

            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            font-family: 'Source Sans Pro', sans-serif;
            overflow: scroll;
            }
            .login-form {
            width: 300px;
            margin: 0 auto;
           
            
            }
            .login-form input[type="text"] {
            border-radius: 15px;
            width: 100%;
            padding: 13px;
            border: 1px solid #dddddd;
            margin-bottom: 15px;
            box-sizing:border-box;
            }
            .login-form h1 {
            text-align: center;
            color: #FFFFFF;
            font-size: 50px;
            padding: 10px 0 20px 0;
            font-family: 'Source Sans Pro', sans-serif;
            font-weight:300;
            }
            .login-form input[type="submit"] {
            position:relative;
            width: 60%;
            padding: 10px;
            display:block;
            margin-left:auto;
            margin-right:auto;
            background-color: fade(white, 20%);
            border:1px solid fade(white, 40%);
            border-radius: 15px;
            
            box-sizing: border-box;
            cursor: pointer;
            color: #097d74;
            font-weight:300;
            font-size: 15px;

            }
            .login-form input[type="submit"]:hover {
            background-color: #b0ebe7;

            }
            


    body
        .class
            .login-form
                h1 Add A Course
                form(method='POST' action='/post-course')
                    input(
                        type='text'
                        name='Course_name'
                        placeholder='Course Name'
                        required="required" 
                      
                      
                    )
                    input(
                        type='text'
                        name='Course_ID'
                        placeholder='Course ID'
                        required=''
                       
                    )
                    input(
                        type='text'
                        name='Faculty_Name'
                        placeholder='Faculty Name'
                        required=''
                        
                    )
                    input(
                        type='text'
                        name='Slot'
                        placeholder='Slots'
                        required=''
                        
                    )
                    
                        
                    input(
                        type='submit'
                         
                    )
                    br
                form(method='GET' action='/home-page')
                    input(
                        type='submit'
                        value='Back to Home Page'
                        onclick="myFunction('Are you sure? your details will be lost')"
                    )







